<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ExtensionLightTheme" parent="@android:style/Theme" />

    <!-- *************************************************** -->
    <!-- SEPARATORS -->
    <!-- *************************************************** -->

    <style name="SeparatorHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="SeparatorVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <!-- *************************************************** -->
    <!-- TEXT VIEWS -->
    <!-- *************************************************** -->

    <!-- SCREEN CORE -->

    <style name="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_base</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextViewScreenTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_base</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextView.InitializingTitle">
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">@dimen/text_size_huge</item>
    </style>

    <style name="TextView.InitializingDesc">
        <item name="android:maxLines">3</item>
    </style>

    <!-- DASHBOARD -->

    <style name="TextViewDashboardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextViewDashboardValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <!-- *************************************************** -->
    <!-- BUTTONS -->
    <!-- *************************************************** -->

    <style name="ButtonMainMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ButtonTrackRecord">
        <item name="android:layout_width">@dimen/track_rec_btn_size</item>
        <item name="android:layout_height">@dimen/track_rec_btn_size</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- *************************************************** -->
    <!-- PROGRESS BAR -->
    <!-- *************************************************** -->

    <style name="ProgressBarSmall" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:indeterminate">true</item>
    </style>

    <!-- *************************************************** -->
    <!-- LIST ITEMS -->
    <!-- *************************************************** -->

    <style name="TextViewListTitle">
        <item name="android:id">@id/text_view_title</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="TextViewListDesc">
        <item name="android:id">@id/text_view_desc</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>