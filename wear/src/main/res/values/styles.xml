<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ExtensionLightTheme" parent="@android:style/Theme" />

    <style name="rootActivityStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/box_inset_layout_padding</item>
    </style>

    <!-- *************************************************** -->
    <!-- NAVIGATION DRAWER -->
    <!-- *************************************************** -->
    <style name="navDrawerButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- *************************************************** -->
    <!-- STATISTICS -->
    <!-- *************************************************** -->

    <style name="statText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="statDescription">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:color">@color/grey</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="statIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- *************************************************** -->
    <!-- MAP ACTIVITY -->
    <!-- *************************************************** -->
    <style name="zoomButton">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:background">@drawable/round_background</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginTop">@dimen/inner_frame_layout_padding</item>
    </style>

    <!-- *************************************************** -->
    <!-- SEPARATORS -->
    <!-- *************************************************** -->

    <style name="SeparatorHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <style name="SeparatorVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/light_grey</item>
    </style>


    <!-- *************************************************** -->
    <!-- BUTTONS -->
    <!-- *************************************************** -->

    <style name="ButtonTrackRecord">
        <item name="android:layout_width">@dimen/track_rec_btn_size</item>
        <item name="android:layout_height">@dimen/track_rec_btn_size</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <!-- *************************************************** -->
    <!-- LIST ITEMS -->
    <!-- *************************************************** -->

    <style name="TextViewListTitle">
        <item name="android:id">@id/text_view_title</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_massive</item>
    </style>

</resources>