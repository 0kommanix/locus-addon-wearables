<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_layout_track_rec_buttons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/track_rec_btn_size"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/image_view_track_rec_stop"
            android:onClick="handleStopClick"
            style="@style/ButtonTrackRecord"
            android:src="@drawable/ic_96_track_recording_stop" />

        <ImageButton
            android:id="@+id/image_view_track_rec_pause"
            android:onClick="handlePauseClick"
            style="@style/ButtonTrackRecord"
            android:src="@drawable/ic_96_track_recording_pause" />

        <ImageButton
            android:id="@+id/image_view_track_rec_add_wpt"
            android:onClick="handleAddWaypointClick"
            style="@style/ButtonTrackRecord"
            android:src="@drawable/ic_96_track_recording_add_wpt" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>