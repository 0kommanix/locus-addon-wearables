<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/component_padding"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/list_select_icon_height"
        android:layout_height="@dimen/list_select_icon_height"
        android:src="@drawable/ic_circle_edit"
        android:tint="@color/grey"
        />

    <TextView
        android:id="@+id/info"
        style="@style/statDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/grey"
        android:gravity="center"
        android:text="@string/stat_blank_info_text"
        />
</LinearLayout>

