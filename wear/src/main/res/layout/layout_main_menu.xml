<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="32dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="32dp"
    android:layout_marginBottom="16dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            style="@style/ButtonMainMenu"
            android:id="@+id/button_main_menu_01_map"
            android:src="@drawable/ic_map_black"/>

        <ImageButton
            style="@style/ButtonMainMenu"
            android:id="@+id/button_main_menu_02_track"
            android:src="@drawable/ic_track_record_alt"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageButton
            style="@style/ButtonMainMenu"
            android:id="@+id/button_main_menu_03"
            android:src="@drawable/ic_info_alt"/>

        <ImageButton
            style="@style/ButtonMainMenu"
            android:id="@+id/button_main_menu_04"
            android:src="@drawable/ic_info_alt"/>

    </LinearLayout>

</LinearLayout>